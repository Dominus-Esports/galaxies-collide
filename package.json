{
  "name": "galaxies-collide",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:all": "jest src/__tests__/simple.test.js",
    "dev:auto": "npm run dev & npm run watch:push",
    "watch:push": "nodemon --watch src --ext ts,tsx,js,jsx --exec \"npm run push:dev\"",
    "push:dev": "powershell -ExecutionPolicy Bypass -File scripts/dev-auto.ps1 develop",
    "push:feature": "powershell -ExecutionPolicy Bypass -File scripts/dev-auto.ps1 feature",
    "push:hotfix": "powershell -ExecutionPolicy Bypass -File scripts/dev-auto.ps1 hotfix",
    "deploy:staging": "vercel --target=staging",
    "deploy:prod": "vercel --prod",
    "branch:dev": "git checkout -b develop && git push -u origin develop",
    "branch:feature": "git checkout -b feature/$(Get-Date -Format \"yyyyMMdd-HHmmss\")",
    "branch:hotfix": "git checkout -b hotfix/$(Get-Date -Format \"yyyyMMdd-HHmmss\")",
    "merge:dev": "git checkout main && git merge develop && git push origin main",
    "clean": "git clean -fd && git reset --hard HEAD",
    "status": "git status && echo \"--- Deployment Status ---\" && vercel ls"
  },
  "dependencies": {
    "@babylonjs/core": "^8.24.0",
    "@babylonjs/gui": "^8.24.0",
    "@babylonjs/loaders": "^8.24.0",
    "@babylonjs/materials": "^8.24.0",
    "@tailwindcss/postcss": "^4.1.12",
    "autoprefixer": "^10.4.21",
    "axios": "^1.11.0",
    "crypto-js": "^4.2.0",
    "next": "15.5.0",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^8",
    "eslint-config-next": "15.5.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^29.7.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
